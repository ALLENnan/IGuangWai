<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="@android:windowAnimationStyle">@style/myact</item>
    </style>

    <style name="myact">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_right</item>
    </style>

    <style name="title_bar_style">
        <item name="android:background">@drawable/bg_titlebar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">25.0sp</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="left_drawer_item_line">
        <item name="android:background">@color/left_drawer_item_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.8dip</item>
    </style>

    <style name="left_drawer_item_layout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/left_drawer_item_bg</item>
        <item name="android:paddingLeft">40.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50.0dip</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="left_drawer_item_text">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/left_drawer_item_text</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">9.0dip</item>
        <item name="android:paddingBottom">9.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">25.0dip</item>
    </style>

    <style name="top_update_count">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">#ffcc3131</item>
        <item name="android:gravity">center</item>
        <item name="android:height">15.0dip</item>
        <item name="android:width">15.0dip</item>
    </style>

    <style name="left_drawer_count" parent="@style/top_update_count">
        <item name="android:textSize">8.0sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="bt_subarea">
        <item name="android:background">@drawable/bt_subarea</item>
        <item name="android:textColor"> #707070</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_marginLeft">9.0dip</item>
        <item name="android:layout_marginRight">9.0dip</item>
    </style>

    <style name="bt_press_subarea">
        <item name="android:background">@drawable/bt_press_subarea</item>
        <item name="android:textColor"> #707070</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_marginLeft">9.0dip</item>
        <item name="android:layout_marginRight">9.0dip</item>
    </style>

    <style name="backStyle">
        <item name="android:drawableLeft">@drawable/back_arrow</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="tv_title">
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_bottom</item>
    </style>

    <style name="line">
        <item name="android:background">#D9D8D3</item>
    </style>

</resources>